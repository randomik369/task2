include ../../../components/color-box/color-box.pug  
include ../../../components/color-text/color-text.pug 

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport' content="initial-scale=1.0, width=device-width")
    title Toxin Hotel
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    link(rel="stylesheet" href="./style.css")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    section.colors-and-type
      div.colors-and-type__row-color
        +color-box({colorName : 'Dark Shade 100%', backgroundColor : 'darkShade-100'})
        +color-box({colorName : 'Dark Shade 75%', backgroundColor : 'darkShade-75'})
        +color-box({colorName : 'Dark Shade 50%', backgroundColor : 'darkShade-50'})
        +color-box({colorName : 'Dark Shade 25%', backgroundColor : 'darkShade-25'})
        +color-box({colorName : 'Dark Shade 5%', backgroundColor : 'darkShade-5'})
        +color-box({colorName : 'Purple', backgroundColor : 'purple', colorCode : '#BC9CFF'})
        +color-box({colorName : 'Green', backgroundColor : 'green', colorCode : '#6FCF97'})
      
      div.colors-and-type__row-text
        +color-text({title : 'H1', text : 'This one is the sub-section or</br> widget title', size : '24'})
        +color-text({title : 'H2', text : 'Next one is the item title inside</br> widgets', size : '19'})
        +color-text({title : 'H3', text : 'This is a label or CTA text', size : '12'})
        +color-text({title : 'Body', text : 'This is the body text which is used for most</br> of the design, like paragraphs, lists, etc.'})
    
    script(src = "index.js")





